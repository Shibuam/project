<div class="col-xl-12 col-lg-12 col-md-12">
              <form action="/admin/addSubCategory"id="sub" method="post">
               <select name="category" id=""class="form-select" aria-label="Default select example">
                <br><br>
                  {{#each category}}
                  <option value="{{this.category}}">{{this.category}}</option>
                  {{/each}}
                  <br><br>
                </select>
                <div class="form-group mb-3">
                  <div class="row"></div>
                  <label for="name"class="text-white">Add Sub Category </label>

                  <input name="subCategory" type="text" class="form-control validate " ><br>
