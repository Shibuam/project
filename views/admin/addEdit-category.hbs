<div class="container">
  <div class="row">
    <div class="col-sm">
     
    <table class="table">
     <thead>
       <tr>
         <th scope="col"class="text-white">Category Name</th>
      <th scope="col">Delete</th>
      <th scope="col"class="text-white">View Subcategory</th>
       </tr>
     </thead>
      {{#each category}}
      <tr>
        <td>{{this.category}}</td>
        <td><a class="btn bg-danger" href="/admin/deleteCategory/{{this._id}}">Delete</a></td>
         <td><a class="btn bg-success" href="/admin/viewSubCategory/{{this.category}}">View Subcategory</a></td>
      </tr>
      {{/each}}
    </table>
    </div>
   {{#if Subcategory}}
    <div class="col-sm">
    
      <table class="table">
     <thead>
       <tr>
         <th scope="col"class="text-white">Subcategory Name</th>
      <th scope="col">Delete</th>
       </tr>
     </thead>
      {{#each Subcategory}}
      <tr>
        <td class="text-black">{{this.subCategory}}</td>
        <td><a class="btn bg-danger" href="/admin/deleteSubCategory/{{this._id}}">Delete</a></td>
      </tr>
      {{/each}}
    </table>
    </div>
    {{/if}}
  </div>
</div>

