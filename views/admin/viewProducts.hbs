      <td>{{this.colour}}</td>
      <td>{{this.qty}}</td>
       <td>{{this.qty}}</td>
       <td>
       <a class="btn btn-primary" href="/admin/editProduct/{{this._id}}">Edit</a>
       <a class="btn btn-danger" href="/admin/deleteProduct/{{this._id}}" onclick="return confirm('do you want to delete{{this.name}}?')">Delete</a></td>

 
    </tr>
    {{/each}}
    </tbody>
    </table>
   </div>