<div class="container-fluid"style="margin-top: 100px;">
<section class=" style="width: 15px">
   View Product

<a class="btn-info float-end m-2 p-2" href="/admin/addProduct">Add Product</a>
  </section>

<container-flex>
<table class="table table-dark">
  <thead>
    <tr>
 
      <th scope="col">Image</th>
      <th scope="col">Category</th>
      
       <th scope="col">Sub category</th>
       
         <th scope="col">Landing Cost</th>
        
          <th scope="col">MRP</th>
          <th scope="col">Qty</th>
          <th scope="col">Brand</th>
           <th scope="col">Action</th>
          
         
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>

      <td>
          <img width="50px"height="50px" src="/images/proImage/{{this._id}}image.jpg" alt="">
      </td>
      <td>{{this.category}}</td>
    
       <td>{{this.SubCategory}}</td>
        <td>{{this.lanCost}}</td>
         <td>{{this.mrp}}</td>
          <td>{{this.qty}}</td>
           <td>{{this.brand}}</td>

       <td>
       <a class="btn btn-primary" href="/admin/editProduct/?id={{this._id}}">Edit</a>
       <a class="btn btn-danger" href="/admin/deleteProduct/{{this._id}}" onclick="return confirm('do you want to delete{{this.name}}?')">Delete</a></td>

 
    </tr>
    {{/each}}
    </tbody>
    </table>
   </div>