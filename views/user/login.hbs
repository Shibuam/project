<script>
  const name=document.getElementById("email")
   const password=document.getElementById("password")
      const login=document.getElementById("login")
      const errorElement=document.getElementsByClassName('error')

      login.addEventListener('submit',(e)=>{
           
                      let messages=[]
         if(name.value==''||name.value==null){
              messages.push('email is required')
              console.log(messages)
              errorElement[0].innerText="email is required"
      }
      if(password.length<3||password.value==''){
              messages.push('password required minimum 3 charactors')
              console.log(messages)
              errorElement[1].innerText="password required minimum 3 charactors'"
      }
      
      
          if(messages.length>0){
                 e.preventDefault()
                 errorElement.innerText=messages.join(',')
          }
         
      })

  
          </script>
